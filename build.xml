<project name="Alg" default="unit-test">


    <path id="libs">
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="compile">
        <javac srcdir="src" destdir="build">
            <classpath>
                <path refid="libs"/>
            </classpath>
        </javac>
    </target>


    <target name="unit-test" depends="compile">

        <mkdir dir="tests"/>

        <junit printsummary="yes" haltonfailure="yes">

            <classpath>
                <path refid="libs"/>
                <pathelement location="build"/>
            </classpath>


            <formatter type="plain"/>

            <batchtest fork="yes" todir="tests">
                <fileset dir="src">
                    <include name="test/*.java"/>
                </fileset>
            </batchtest>

        </junit>

    </target>

</project>